<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.brainquizapp.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ContentDescription"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/TitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_title" />

        <TextView
            style="@style/TitleBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_body" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="214dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/halka" />

        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_1" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_body_1" />

        <RadioGroup
            android:id="@+id/answer_to_question_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer_1a"
                style="@style/RadioAnswer"
                android:text="@string/answer_1a" />

            <RadioButton
                android:id="@+id/answer_1b"
                style="@style/RadioAnswer"
                android:text="@string/answer_1b" />

            <RadioButton
                android:id="@+id/answer_1c"
                style="@style/RadioAnswer"
                android:text="@string/answer_1c" />

            <RadioButton
                android:id="@+id/answer_1d"
                style="@style/RadioAnswer"
                android:text="@string/answer_1d" />
        </RadioGroup>

        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_2" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_body_2" />

        <RadioGroup
            android:id="@+id/answer_to_question_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer_2a"
                style="@style/RadioAnswer"
                android:text="@string/answer_2a" />

            <RadioButton
                android:id="@+id/answer_2b"
                style="@style/RadioAnswer"
                android:text="@string/answer_2b" />

            <RadioButton
                android:id="@+id/answer_2c"
                style="@style/RadioAnswer"
                android:text="@string/answer_2c" />

            <RadioButton
                android:id="@+id/answer_2d"
                style="@style/RadioAnswer"
                android:text="@string/answer_2d" />
        </RadioGroup>

        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_3" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_body_3" />

        <RadioGroup
            android:id="@+id/answer_to_question_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer_3a"
                style="@style/RadioAnswer"
                android:text="@string/answer_3a" />

            <RadioButton
                android:id="@+id/answer_3b"
                style="@style/RadioAnswer"
                android:text="@string/answer_3b" />

            <RadioButton
                android:id="@+id/answer_3c"
                style="@style/RadioAnswer"
                android:text="@string/answer_3c" />
        </RadioGroup>

        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_4" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_body_4" />

        <RadioGroup
            android:id="@+id/answer_to_question_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer_4a"
                style="@style/RadioAnswer"
                android:text="@string/answer_4a" />

            <RadioButton
                android:id="@+id/answer_4b"
                style="@style/RadioAnswer"
                android:text="@string/answer_4b" />

            <RadioButton
                android:id="@+id/answer_4c"
                style="@style/RadioAnswer"
                android:text="@string/answer_4c" />
        </RadioGroup>

        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_5" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_body_5" />

        <RadioGroup
            android:id="@+id/answer_to_question_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer_5a"
                style="@style/RadioAnswer"
                android:text="@string/answer_5a" />

            <RadioButton
                android:id="@+id/answer_5b"
                style="@style/RadioAnswer"
                android:text="@string/answer_5b" />

            <RadioButton
                android:id="@+id/answer_5c"
                style="@style/RadioAnswer"
                android:text="@string/answer_5c" />
        </RadioGroup>



        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_11" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_body_11" />

        <EditText
            android:id="@+id/answer_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/answer_11"
            android:inputType="textCapWords" />

        <View style="@style/DivisionLine" />

        <View style="@style/DivisionLine" />

        <TextView
            style="@style/QuestionBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_text" />

        <Button
            android:id="@+id/submit_button"
            style="@style/SubmitButtonStyle"
            android:text="@string/submit" />


    </LinearLayout>

</ScrollView>
